<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FastNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
    </style>

    <style name="SearchStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:colorControlActivated">?attr/colorOnPrimary</item>
        <item name="android:editTextColor">?attr/colorOnPrimary</item>
        <item name="android:colorAccent">?attr/colorOnPrimary</item>
    </style>
</resources>