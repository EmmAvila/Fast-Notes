<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_space"
    app:cardBackgroundColor="?attr/colorPrimaryContainer"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/min_space"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textAlignment="textStart"
            tools:text="Pasear al perro" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginVertical="@dimen/small_space"
            android:layout_marginEnd="@dimen/extra_large_space"
            android:background="?attr/colorOnPrimaryContainer" />

        <TextView
            android:id="@+id/tvDescriptionNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textSize="@dimen/sub_title_text"
            android:textAlignment="textStart"
            tools:text="Salir tambien a comprar cosaas"
            android:lines="3" />

    </LinearLayout>

</androidx.cardview.widget.CardView>